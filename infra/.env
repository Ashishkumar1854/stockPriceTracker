# from repo root
cat > infra/.env <<'EOF'
# Postgres (used by docker-compose)
POSTGRES_USER=ashish
POSTGRES_PASSWORD=ashishpwd
POSTGRES_DB=ashishstock
DATABASE_URL=postgresql://ashish:ashishpwd@postgres:5432/ashishstock

# JWT secret
JWT_SECRET=change_this_secret

# Google OAuth (replace with your credentials later)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-secret

# NLP service url (docker service name)
NLP_SERVICE_URL=http://nlp:8001
EOF
